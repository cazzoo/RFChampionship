{% if eventId is null %} 
    Aucun Event sélectionné. Veuillez sélectionner un Event. 
{% else %}
	
	{% set canEdit = is_granted('ROLE_MANAGER') or is_granted('ROLE_CERTIFIED_MANAGER') %}
        
    {% if canEdit %}
        Ajouter une session
        <a class="ym-button ym-add" href="{{ path('admin_session_new', {'gameId' : gameId, 'championshipId' : championshipId, 'eventId' : eventId}) }}">Add</a>
    {% endif %}

    {% if sessions %}

        {% set canManage = canEdit or sessions[0].event.championship.isManager(app.user) %}
    	
        <table class="table">
    		<thead>
    			<tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Dates</th>
                            <th>Actions</th>
    			</tr>
    		</thead>
    		<tbody class="table-striped">
        		{% for session in sessions %}
                    <tr>
                        <td>{{ session.name }}</td>
                        <td>{{ session.typeSession.name }}</td>
                        <td>
                            <small>
                                <span class="label label-primary">
                                    {{ session.beginDate|date("Y/m/d H:i") }}
                                </span>
                                 > 
                                <span class="label label-primary">
                                    {{ session.endDate|date("Y/m/d H:i") }}
                                </span>
                            </small>
                        </td>
                        <td>
                            {% if canManage %}
                                <a class="ym-button ym-edit" href="{{ path('admin_session_edit', { 'sessionId': session.id, 'gameId': gameId, 'championshipId': championshipId, 'eventId' : eventId}) }}">Edit</a><br />
                            {% endif %}
                            <a class="ym-button ym-next sessionItem" id="session_{{ session.id }}" data-session="{{ session.id }}" href="#session_{{ session.id }}">Select</a>
                        </td>
                    </tr>
	    		{% endfor %}
    		</tbody>
    	</table>
    {% endif %}
{% endif %}
