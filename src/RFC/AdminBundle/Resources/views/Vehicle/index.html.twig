{% extends "RFCCoreBundle::layout.html.twig" %}
    {% block title %} Admin - {{ parent() }} {% endblock %}
{% block rfccore_body %}

<div class="panel panel-default">
    <div class="panel-heading">
        Vehicles &nbsp;
        <a class="ym-button ym-add" href="{{ path('admin_vehicle_new', {'gameId' : gameId}) }}">Add</a>
    </div>
    <div id="msg"></div>
    <div class="panel-body">
    	<table class="table">
    		<thead>
    			<tr>
    				<th>Name</th>
    				<th>Description</th>
    				<th>Images</th>
    			</tr>
    		</thead>
    		<tbody class="table-striped">
    		{% for vehicle in vehicles %}
	    		<tr>
	    			<td>
	    				<a href="{{ path('admin_vehicle_edit', {'vehicleId' : vehicle.id, 'gameId' : gameId}) }}">{{ vehicle.name }}</a>
	    			</td>
                    <td>{{ vehicle.description }}</td>
		    		<td>
		    			{% if vehicle.listImages|length > 0 %}
		    				<a class="ym-button gallery fancybox.ajax" href="{{ path('rfcCore_showGallery', {'elementType': 'vehicle', 'elementId' : vehicle.id}) }}">show ({{ vehicle.listImages|length }})</a>
		    			{% else %}
		    				-
		    			{% endif %}
		    		</td>
	    		</tr>
	    		{% endfor %}
    		</tbody>
    	</table>
    </div>
</div>
{% endblock %}
