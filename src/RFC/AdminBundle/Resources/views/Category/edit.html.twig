{% extends "RFCAdminBundle::layout.html.twig" %} {% block title %} Admin
- {{ parent() }} {% endblock %} {% block rfccore_body %}
<h1>Category edit</h1>

{{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.description) }}
    {{ form_row(edit_form.listVehicles) }}
    {{ form_row(edit_form.commentsActive) }}
    
    <h3>Images</h3>
    <ul class="images" data-prototype="{{ form_widget(edit_form.listImages.vars.prototype)|e }}">
        {# it√®re sur chaque image existantz et affiche ses champs #}
        {% for image in edit_form.listImages %}
            <li>{{ form_row(image.name) }}
            {{ form_row(image.description) }}
            {{ form_row(image.url) }}
            {{ form_row(image.alt) }}</li>
        {% endfor %}
    </ul>

{{ form_end(edit_form) }}

<ul class="record_actions">
	<li><a href="{{ path('admin_category', {'gameId' : gameId}) }}"> Back
			to the list </a></li>
	<li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
