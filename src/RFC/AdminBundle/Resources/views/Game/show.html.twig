{% extends "RFCAdminBundle::layout.html.twig" %}
{% block title %}
	Admin - {{ parent() }}
{% endblock %}
{% block rfccore_body %}
<h1>Game</h1>

<table class="record_properties">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{ entity.name }}</td>
		</tr>
		<tr>
			<th>Short Name</th>
			<td>{{ entity.shortName }}</td>
		</tr>
		<tr>
			<th>Description</th>
			<td>{{ entity.description }}</td>
		</tr>
		<tr>
			<th>Comments active?</th>
			<td>{{ entity.commentsActive }}</td>
		</tr>
		<tr>
			<th>Image_url</th>
			<td>
			 {% for image in entity.listImages %}
                <li>{{ image.name }}
                {{ image.description }}
                {{ image.url }}
                {{ image.alt }}</li>
            {% endfor %}
           </td>
		</tr>
		<tr>
			<th>Listchampionships</th>
		</tr>
	</tbody>
</table>

<ul class="record_actions">
	<li><a href="{{ path('admin_game') }}"> Back to the list </a></li>
	<li><a href="{{ path('admin_game_edit', { 'gameId': entity.id }) }}"> Edit
	</a></li>
	<li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
