{% extends "RFCCoreBundle::layoutNoGame.html.twig" %}
{% block title %}
    Admin - {{ parent() }}
{% endblock %} 
{% block rfccore_body %}
    <h1>Game edit</h1>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.shortName) }}
    {{ form_row(edit_form.description) }}
    {{ form_row(edit_form.commentsActive) }}

    <h3>Images</h3>
    <ul class="images" data-prototype="{{ form_widget(edit_form.listImages.vars.prototype)|e }}">
        {% for image in edit_form.listImages %}
            <li>
                {{ form_row(image.name) }}
                {{ form_row(image.description) }}
                {% if image.path.vars.data.path is defined %}
                    <img src="{{ image.path.vars.data.path }}">
                {% endif %}
                {{ form_row(image.path) }}
                {{ form_row(image.commentsActive) }}
            </li>
        {% endfor %}
    </ul>

    <input type="submit"/>

    {{ form_end(edit_form) }}

    <a href="{{ path('rfcCore_gameParameters', {'gameId': entity.id}) }}"> Back to the game </a>

    {{ form(delete_form) }}

{% endblock %}
