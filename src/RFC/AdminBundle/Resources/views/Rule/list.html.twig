{% set canEdit = is_granted('ROLE_MANAGER') or is_granted('ROLE_CERTIFIED_MANAGER') %}

{% if metaRuleId is defined and metaRuleId is null %}
    Aucune MetaRule sélectionné. Veuillez sélectionner une MetaRule.
{% else %}
    {% if rules %}
        <table class="ui stripped table">
            <tbody>
                {% set typeSession = '' %}
                {% for rule in rules %}
                    {% if rule.typeSession != typeSession %}
                        {% set typeSession = rule.typeSession %}
                        <tr class="info">
                            <td colspan="3">
                                <strong>
                                    {{ typeSession }}
                                </strong>
                            </td>
                        </tr>
                    {% endif %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_rule_edit', {'ruleId' : rule.id, 'gameId' : game.id})}}">{{ rule.name }}</a>
                        </td>
                        <td>
                            {{ rule.value }}
                        </td>
                        <td>
                            {{ rule.description }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        Rien a afficher
    {% endif %}
{% endif %}