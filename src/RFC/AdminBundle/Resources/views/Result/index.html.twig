{% extends 'RFCAdminBundle::layout.html.twig' %}

{% block body -%}
    <h1>Result list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_result_show', { 'resultId': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.value }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_result_show', { 'resultId': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_result_edit', { 'resultId': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_result_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
