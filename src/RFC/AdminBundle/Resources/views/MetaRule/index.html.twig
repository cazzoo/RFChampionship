{% extends "RFCCoreBundle::layout.html.twig" %} {% block javascripts %}
{{ parent() }} {% javascripts 'RFCAdminJS' %}
<script src="{{asset('js/forms.behiavior.js') }}"></script>
{% endjavascripts %} {% endblock %} {% block title %} Admin - {{
parent() }} {% endblock %} {% block rfccore_body %}

<ol class="breadcrumb">
	<li><a href="{{ path('RFCAdmin_index') }}">Admin</a></li>
	<li><a href="{{ path('admin_game_manage', {'id' : game[0].id}) }}">{{
			game[0].name }}</a></li>
	<li class="active">Rules</li>
</ol>

<div class="row">
	<div class="col-md-5">
		<h1>
			Meta Rules <a class="btn btn-inverse btn-xs" role="button"
				href="{{ path('admin_metaRule_new', {'gameId' : gameId}) }}"> <span
				class="glyphicon glyphicon-plus"></span>
			</a>
		</h1>

		<div class="list-group">
			{% for metaRule in metaRules %}
			<div class="row">
				<div class="col-md-10">
					<a id="metaRule_{{ metaRule.id }};game_{{ game[0].id }}" href="#metaRule_{{ metaRule.id }}" class="metaRuleItem list-group-item">
						<h4 class="list-group-item-heading">{{ metaRule.name }}</h4>
						<p class="list-group-item-text">{{ metaRule.description }}</p>
					</a>
				</div>
				<div class="col-md-2">
					<ul class="list-unstyled">
						<li><a class="btn btn-info btn-xs" role="button"
							href="{{ path(
		'admin_metaRule_show', {'id' : metaRule.id, 'gameId' : gameId }) }}"><span
								class="glyphicon glyphicon-eye-open"></span></a></li>
						<li><a class="btn btn-primary btn-xs" role="button"
							href="{{ path('admin_metaRule_edit', {'id' : metaRule.id, 'gameId' : gameId}) }}"><span
								class="glyphicon glyphicon-edit"></span></a></li>
					</ul>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	<div class="col-md-7">
		<h3>List Rules</h3>

		<ul class="list-group" id="listRules">{# Colonne 2 : Rules #} {%
			include 'RFCAdminBundle:Rule:list.html.twig' with {'rules' :
			rules, 'game' : game, 'metaRuleId' : metaRuleId} %}
		</ul>
	</div>
</div>
<hr />
<div>
	<h1>
		Rules <a class="btn btn-inverse btn-xs" role="button"
			href="{{ path('admin_rule_new', {'gameId' : gameId}) }}"> <span
			class="glyphicon glyphicon-plus"></span>
		</a>
	</h1>
	<div class="list-group">
		{% for rule in rules %}
		<div class="row">
			<div class="col-md-10">
				<a href="#" class="list-group-item">
					<h4 class="list-group-item-heading">{{ rule.name }}</h4>
					<p class="list-group-item-text">{{ rule.value }}</p>
				</a>
			</div>
			<div class="col-md-2">
				<ul class="list-unstyled">
					<li><a class="btn btn-info btn-xs" role="button"
						href="{{ path(
		'admin_rule_show', {'id' : rule.id, 'gameId' : gameId }) }}"><span
							class="glyphicon glyphicon-eye-open"></span></a></li>
					<li><a class="btn btn-primary btn-xs" role="button"
						href="{{ path('admin_rule_edit', {'id' : rule.id, 'gameId' : gameId}) }}"><span
							class="glyphicon glyphicon-edit"></span></a></li>
				</ul>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
