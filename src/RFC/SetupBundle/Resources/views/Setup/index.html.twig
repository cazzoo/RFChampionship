{# src/RFC/SetupBundle/Resources/views/Setup/index.html.twig #}
{% extends "RFCSetupBundle::layout.html.twig" %}
    {% block title %}
        Accueil - {{ parent() }}
{% endblock %}
{% block rfccore_body %}

<h2>Liste des setups</h2>

{% if setups %}

    <ul class="list-inline">
        {% for setup in setups %}
        <li class="float-left">
            <div class="center">
                <a href="{{ path('rfcCore_gameSelection', {'gameId': setup.id}) }}">
                    {% if setup.listImages is not empty %}
                    <img alt="{{ setup.listImages[0].name }}" src="{{ setup.listImages[0].url }}" class="img-rounded" width="200px" />
                    <br />
                    {% endif %}
                    <span class="label label-default">{{ setup.name }}</span>
                </a>
            </div>
        </li>
        {% endfor %}
    </ul>

{% else %}
    No setups available
{% endif %}

{% if steps %}

    <ul class="list-inline">
        {% for step in steps %}
        <li class="float-left">
            <div class="center">
                <a href="{{ path('rfcCore_gameSelection', {'gameId': step.id}) }}">
                    <span class="label label-default">{{ step.name }}</span>
                </a>
            </div>
        </li>
        {% endfor %}
    </ul>

{% else %}
    No step available
{% endif %}

{% endblock %}
