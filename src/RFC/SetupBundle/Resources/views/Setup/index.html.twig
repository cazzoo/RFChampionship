{# src/RFC/SetupBundle/Resources/views/Setup/index.html.twig #}
{% extends "RFCSetupBundle::layout.html.twig" %}
    {% block title %}
        Accueil - {{ parent() }}
{% endblock %}
{% block rfccore_body %}

<h2>Liste des setups</h2>

{% if setups %}

    <ul class="list-inline">
        {% for setup in setups %}
        <li class="float-left">
            <div class="center">
                <a href="{{ path('rfcCore_gameSelection', {'gameId': setup.id}) }}">
                    {% if setup.listImages is not empty %}
                    <img alt="{{ setup.listImages[0].name }}" src="{{ setup.listImages[0].url }}" class="img-rounded" width="200px" />
                    <br />
                    {% endif %}
                    <span class="label label-default">{{ setup.name }}</span>
                </a>
            </div>
        </li>
        {% endfor %}
    </ul>

{% else %}
    No setups available
{% endif %}

{% if steps %}

    <ul>
        {% for step in steps %}
        <li>
            <a href="{{ path('setup_step_edit', { 'stepId': step.id, 'gameId' : gameId }) }}">{{ step.id }}</a><br />
            {{ step.name }}<br />
            {{ step.description }}<br />
            {{ step.tip }}<br />
            {{ step.category }}<br />
            {{ step.complexity }}<br />
            {{ step.indicatorType }}<br />
            {{ step.commentsActive }}<br />
            {% if step.listSubSteps %}
                <ul>
                {% for substep in step.listSubSteps %}
                    <li>
                        <a href="{{ path('setup_subStep_edit', { 'subStepId': substep.id, 'stepId': step.id, 'gameId' : gameId }) }}">{{ substep.id }}</a><br />
                        {{ substep.name }}<br />
                        {{ substep.description }}<br />
                        {{ substep.action }}<br />
                        {{ substep.stepCondition }}<br />
                        {{ substep.toDoText }}<br />
                        {{ substep.optimalAction ? substep.optimalAction : '0' }}<br />
                    </li>
                {% endfor %}
                </ul>
            {% endif %}
        </li>
        {% endfor %}
    </ul>

{% else %}
    No step available
{% endif %}

{% endblock %}
