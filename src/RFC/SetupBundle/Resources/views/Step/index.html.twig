{# src/RFC/SetupBundle/Resources/views/Setup/index.html.twig #}
{% extends "RFCSetupBundle::layout.html.twig" %}
    {% block title %}
        Accueil - {{ parent() }}
{% endblock %}
{% block rfccore_body %}

<h2>Liste des steps</h2>

<a class="ym-button add" href="{{ path('setup_step_new', {'gameId': gameId}) }}"> create </a><br />

{% if steps %}

    <ul class="list-inline">
        {% for step in steps %}
        <li class="float-left">
            <div class="center">
                <a href="{{ path('setup_step_edit', {'gameId': gameId, 'stepId': step.id}) }}">
                    <span class="label label-default">{{ step.name }}</span>
                </a>
                <br />
                {% for subStep in step.listSubSteps %}
                    {{ subStep.name }}<br />
                {% endfor %}
                <a href="{{ path('setup_step_delete', {'gameId': gameId, 'stepId': step.id}) }}"> delete </a><br />
                <a href="{{ path('setup_subStep_new', {'gameId': gameId, 'stepId': step.id}) }}"> new substep </a>
            </div>
        </li>
        {% endfor %}
    </ul>

{% else %}
    No steps available
{% endif %}

{% endblock %}
