{# src/RFC/SetupBundle/Resources/views/SubSetup/show.html.twig #}

<div class="ui items">
    <div class="item">
        <div class="content">
            <div class="header">{{ subStep.name }}</div>
            <div class="meta">{{ subStep.action }}</div>
            <div class="description">
                <p>{% trans with {'%description%' : subStep.description } %}setup.substep.view.description{% endtrans %}</p>
                <p>{% trans with {'%condition%' : subStep.stepCondition } %}setup.substep.view.condition{% endtrans %}</p>
            </div>
            <div class="extra">
                {% trans with {'%hint%' : subStep.toDoText } %}setup.substep.view.hint{% endtrans %}
            </div>
        </div>
    </div>
</div>