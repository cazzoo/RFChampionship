{# src/RFC/CoreBundle/Resources/views/Structure/gallery.html.twig #}

{% if listImages is not empty %}
    <h4>{% trans %}Gallery{% endtrans %}</h4>
    <div id="gameSlideshow" class="camera_wrap">
        {% for image in listImages %}
            {{ image.name }}
            <div data-src="{{ image.path }}">
                <div class="camera_caption">
                    <strong>{{image.name}}</strong> <br />
                    {{ image.description }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}