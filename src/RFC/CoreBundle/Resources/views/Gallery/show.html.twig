{% if data.listImages is not empty %}
    <div class="slickSlideshow">
        {% for image in data.listImages %}
            <img src="/{{ image.path }}">
        {% endfor %}
    </div>
{% endif %}
{% if canEdit %}
    <a class="ui blue right corner label"
       href="{{ path('admin_'~dataType|lower~'_edit', {'gameId': data.game.id, 'entityId': data.id}) }}">
        <i class="setting icon"></i>
    </a>
    <a class="ui red left corner label"
       href="{{ path('rfcCore_manageGallery', { 'entityType': dataType|title, 'entityId': data.id }) }}">
        <i class="file image outline icon"></i>
    </a>
{% endif %}