{% extends "::layout.html.twig" %}

{% block header %}

    <div class="equal height row">
        <div class="ui middle aligned grid">
            <div class="six wide column">
                <h1>{% include 'RFCCoreBundle::Structure/breadcrumbs.html.twig' %}</h1>
            </div>
            <div class="four wide column">
                <h1>{{ appSettings.getParam('site name').value }}</h1>
            </div>
            <div class="six wide column">
                {#% include 'RFCCoreBundle::Structure/notificationCenter.html.twig' %#}
                {% include 'RFCCoreBundle::Structure/header.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

{% block page_content %}

    {% if appSettings.getGame() is not null or games is defined %}

        {% block rfccore_body %}
        {% endblock %}

    {% else %}

        <div class="ui segment">
            <h2>Le jeu demandé n'existe pas.</h2>
            <a class="ui primary button" href="{{ path('rfcCore_accueil') }}">
                Sélectionner un autre jeu
            </a>
        </div>

    {% endif %}

{% endblock %}

{% block footer %}

    {% include 'RFCCoreBundle::Structure/footer.html.twig' %}

{% endblock %}
