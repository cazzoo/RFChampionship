{% extends "::layout.html.twig" %}

{% block header %}

    <div>
        <h1>RF Championship</h1>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
            | <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">
                {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
            </a>
        {% endif %}
    </div>
    {% if game is defined %}
        <div>
            {% include 'RFCCoreBundle::Structure/header.html.twig' %}
        </div>
    {% endif %}

{% endblock %}
{% block nav %}

    {% include 'RFCCoreBundle::Structure/menu.html.twig' %}

{% endblock %}
{% block breadcrumbs %}

    {% include 'RFCCoreBundle::Structure/breadcrumbs.html.twig' %}

{% endblock %}
{% block main %}

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="box {{ type }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% block rfccore_body %}{% endblock %}

{% endblock %}
{% block footer %}

    {% include 'RFCCoreBundle::Structure/comments.html.twig' %}
    {% include 'RFCCoreBundle::Structure/footer.html.twig' %}

{% endblock %}