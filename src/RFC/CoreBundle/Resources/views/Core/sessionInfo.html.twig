{# src/RFC/CoreBundle/Resources/views/Core/gameIndex.html.twig #}

<h4 class="ui dividing header">
    <a href="{{ path('rfcCore_championships_show', { 'championshipId': session.event.championship.id, 'gameId': appSettings.getGame().id  }) }}#eventId={{ session.event.id }}">{{ session.event.championship.name }}
        : {{ session.event.name }} : {{ session.name }}</a>
</h4>

<div class="ui list">
    <div class="item">
        <i class="wait icon"></i>

        <div class="content">
            <div class="header">
                {% trans %}core.dictionnary.event.date{% endtrans %}
            </div>
            <div class="description">
                {{ session.event.beginDate|date("Y/m/d H:i") }}
                <i class="chevron right icon"></i>
                {{ session.event.endDate|date("Y/m/d H:i") }}
            </div>
        </div>
    </div>
    <div class="item">
        <i class="road icon"></i>

        <div class="content">
            <div class="header">
                {% transchoice 1 %}core.dictionnary.track{% endtranschoice %}
            </div>
            <div class="description">
                {{ session.event.track }}
            </div>
        </div>
    </div>
    {% if session.event.listBroadcast is not empty %}
        <div class="item">
            <i class="file video icon"></i>

            <div class="content">
                <div class="header">
                    {% trans %}core.championship.event.description.broadcast{% endtrans %} :
                </div>
                <div class="list">
                    {% for broadcast in session.event.listBroadcast %}
                        <div class="item">
                            {{ broadcast }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>