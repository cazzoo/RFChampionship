	<span class="dropdown-arrow dropdown-arrow-inverse"></span>
	<ul class="dropdown-menu dropdown-inverse">
		{% for gamedd in games %} {% if (game.id != gamedd.id) %}
		<li><a
			href="{{ path('rfcCore_gameSelection', {'gameId': gamedd.id}) }}">{{
				gamedd.name }}</a></li> {% endif %}{% endfor %}
	</ul>
