<div class="item">
    {% if championship.listImages is not empty %}
        <div class="slickSlideshow ui mini circular images">
            {% for image in championship.listImages %}
                <img class="ui image" src="/{{ image.path }}">
            {% endfor %}
        </div>
    {% endif %}

    <div class="content">
        <a class="header"
           href="{{ path('rfcCore_championships_show', {'gameId': appSettings.getGame().id, 'championshipId': championship.id}) }}">
            {{ championship.name }}
        </a>

        <div class="description">{{ championship.description }}</div>
    </div>
</div>