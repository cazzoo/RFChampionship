{# src/RFC/CoreBundle/Resources/views/Championship/globalResults.html.twig #}

<table class="ui small striped table">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        {% for userid,data in results|slice(0, 3) %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ data.user.username }}</td>
                <td>
                    {{ data.sum }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% if results|length > 3 %}
    <div class="ui button" id="viewFullLeaderboard">View full leaderboard</div>
{% endif %}

<div class="ui standard globalResults modal transition">
    <i class="close icon"></i>
    <div class="header">
        Gobal results
    </div>
    <div class="content">
        <div class="description">
            {% include 'RFCCoreBundle:Championship:resultsTable.html.twig' with { 'results' : results} %}
        </div>
    </div>
</div>