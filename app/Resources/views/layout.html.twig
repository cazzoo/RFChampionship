{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<title>{% block title %}RFC{% endblock %}</title> 

{% block stylesheets %}
	<!-- Loading Bootstrap -->
	<link href="{{ asset('FlatUI/bootstrap/css/bootstrap.css') }}"
		rel="stylesheet" type="text/css" />
	
	<!-- Loading Flat UI -->
	<link href="{{ asset('FlatUI/css/flat-ui.css') }}" rel="stylesheet"
		type="text/css" />
		
	<!-- Loading jquery calendar -->
	<link
		href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}"
		rel="stylesheet" />
		
	<!-- Loading Custom CSS-->
	<link href="{{ asset('css/adminStyle.css') }}" rel="stylesheet"
		type="text/css" />
{% endblock %}

<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
<!--[if lt IE 9]>
      <script src="{{ asset('FlatUI/js/html5shiv.js') }}"></script>
      <script src="{{ asset('FlatUI/js/respond.min.js') }}"></script>
    <![endif]-->
</head>

<body>
	<div class="container">

		<div class="row">
			<div id="content" class="span9">{% block body %} {% endblock %}</div>
		</div>

		<hr>

		<footer>
			{% block footer %} {% endblock %}
		</footer>
	</div>

	{% block javascripts %}
		{% javascripts 'FlatUI' %}
			<script src="{{ asset('FlatUI/js/jquery-2.0.3.min.js') }}"></script>
			<script src="{{ asset('FlatUI/js/jquery-ui-1.10.3.custom.min.js') }}"></script>
			<script src="{{ asset('FlatUI/js/jquery.ui.touch-punch.min.js') }}"></script>
			<script src="{{ asset('FlatUI/js/bootstrap.min.js') }}"></script>
			<script src="{{ asset('FlatUI/js/bootstrap-select.js') }}"></script>
			<script src="{{ asset('FlatUI/js/bootstrap-switch.js') }}"></script>
			<script src="{{ asset('FlatUI/js/flatui-checkbox.js') }}"></script>
			<script src="{{ asset('FlatUI/js/flatui-radio.js') }}"></script>
			<script src="{{ asset('FlatUI/js/jquery.tagsinput.js') }}"></script>
			<script src="{{ asset('FlatUI/js/jquery.placeholder.js') }}"></script>
		{% endjavascripts %}
		{% javascripts 'FosJS' %}
			<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
			<script
				src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
		{% endjavascripts %}
		{% javascripts 'jQueryCalendar' %}
			<script type="text/javascript"
				src="{{ asset('bundles/adesignscalendar/js/fullcalendar/jquery.fullcalendar.min.js') }}"></script>
			<script type="text/javascript"
				src="{{ asset('bundles/adesignscalendar/js/calendar-settings.js') }}"></script>
		{% endjavascripts %}
		{% javascripts 'RFCAdminJS' %}
            <script type="text/javascript"
                src="{{asset('js/forms.behiavior.js') }}"></script>
        {% endjavascripts %}
	{% endblock %}

</body>
</html>