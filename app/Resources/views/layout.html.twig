{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}RFC{% endblock %}</title> 

        {% block stylesheets %}
            <link href="{{ asset('SemanticUI/semantic.css') }}"
                  rel="stylesheet" type="text/css" />

            <!-- Loading jquery calendar -->
            <link
                href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}"
                rel="stylesheet" />

            <!-- Loading Custom CSS-->
            <link href="{{ asset('css/jquery.dropdown.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('css/jquery.camera.css') }}"
                  rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/jquery.wysibb.wbbtheme.css') }}"
                  rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/jquery.datetimepicker.css') }}"
                  rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/adminStyle.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('css/timeline.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('css/animate.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('css/jquery.fancybox.css') }}" rel="stylesheet"
                  type="text/css" />
        {% endblock %}

        {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
        <link rel="stylesheet" href="{{ asset('css/comments.css') }}" type="text/css" />
        {% endstylesheets %}
    </head>

    <body id="siteContent"> 

        <div class="ui vertical labeled icon inverted sidebar main menu overlay left">
            {% block nav %}
                {% include 'RFCCoreBundle::Structure/menu.html.twig' %}
            {% endblock %}
        </div>
        <div class="pusher">
            <div class="ui page grid">
                <div class="sixteen wide column">
                    <header>
                        {% block header %}{% endblock %}
                    </header>
                    <breadcrumbs>
                        {% block breadcrumbs %}{% endblock %}
                    </breadcrumbs>
                </div>
                <div class="sixteen wide column">
                    <content>
                        {% block page_content %}{% endblock %}
                    </content>
                </div>
                <div class="sixteen wide column">
                    <footer>
                        {% block footer %}{% endblock %}
                    </footer>
                </div>
            </div>
        </div>

        {% block javascripts %}
            {% javascripts 'Jquery' %}
            <script src="{{ asset('jquery/js/jquery-2.1.1.min.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.dropdown.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.rcrumbs.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery-migrate-1.2.1.min.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.easing.1.3.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.mobile.customized.min.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.camera.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.wysibb.min.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.datetimepicker.js') }}"></script>
            <script src="{{ asset('jquery/js/jquery.fancybox.js') }}"></script>
            {% endjavascripts %}
            {% javascripts 'SemanticUI' %}
            <script src="{{ asset('SemanticUI/semantic.js') }}"></script>
            {% endjavascripts %}
            {% javascripts 'FosJS' %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script
            src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            {% endjavascripts %}
            {% javascripts 'jQueryCalendar' %}
            <script type="text/javascript"
            src="{{ asset('bundles/adesignscalendar/js/fullcalendar/jquery.fullcalendar.min.js') }}"></script>
            <script type="text/javascript"
            src="{{ asset('bundles/adesignscalendar/js/calendar-settings.js') }}"></script>
            {% endjavascripts %}
            {% javascripts 'RFCJS' %}
            <script type="text/javascript"
            src="{{asset('js/modernizr.js') }}"></script>
            <script type="text/javascript"
            src="{{asset('js/forms.behiavior.js') }}"></script>
            <script type="text/javascript"
            src="{{asset('js/timeline.js') }}"></script>
            {% endjavascripts %}
        {% endblock %}

    </body>
    
</html>