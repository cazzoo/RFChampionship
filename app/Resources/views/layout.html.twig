{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

    <head>

        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}RFC{% endblock %}</title> 

        {% block stylesheets %}
            <link href="{{ asset('SemanticUI/semantic.css') }}"
                  rel="stylesheet" type="text/css" />

            <!-- Loading jquery calendar -->
            <link
                href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}"
                rel="stylesheet" />

            <!-- Loading Custom CSS-->
            <link href="{{ asset('appCss/jquery.camera.css') }}"
                  rel="stylesheet" type="text/css" />
            <link href="{{ asset('appCss/jquery.wysibb.wbbtheme.css') }}"
                  rel="stylesheet" type="text/css" />
            <link href="{{ asset('appCss/jquery.datetimepicker.css') }}"
                  rel="stylesheet" type="text/css" />
            {#<link href="{{ asset('appCss/adminStyle.css') }}" rel="stylesheet"
                  type="text/css" />#}
            <link href="{{ asset('appCss/timeline.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('appCss/animate.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('appCss/jquery.fancybox.css') }}" rel="stylesheet"
                  type="text/css" />
            <link href="{{ asset('appCss/rfc.css') }}" rel="stylesheet"
                  type="text/css" />
        {% endblock %}

        {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
        <link rel="stylesheet" href="{{ asset('appCss/comments.css') }}" type="text/css" />
        {% endstylesheets %}
    </head>

    <body id="siteContent">

        <div class="ui left vertical inverted labeled icon sidebar menu main">
            {% include 'RFCCoreBundle::Structure/menu.html.twig' %}
        </div>
        {% if threadId is defined %}
            <div class="ui right very wide segment sidebar comments">
                <div class="ui horizontal header divider">Comments</div>
                {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': threadId} %}
            </div>
        {% endif %}
        <div class="pusher">
            <div class="ui padded grid">
                <div class="sixteen wide column">
                    {% block header %}
                    {% endblock %}
                    {% block breadcrumbs %}
                    {% endblock %}
                </div>
                <div class="sixteen wide column">
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                    {% block page_content %}
                    {% endblock %}
                </div>
            </div>
            <div class="sixteen wide column footer">
                {% block footer %}
                {% endblock %}
            </div>
        </div>

        {% block javascripts %}
            {% javascripts 'jquery/js/*' %}
            <script type="text/javascript" src="{{ asset( asset_url ) }}"></script>
            {% endjavascripts %}
            {% javascripts 'SemanticUI/semantic.js' %}
            <script type="text/javascript" src="{{ asset( asset_url ) }}"></script>
            {% endjavascripts %}
            {% javascripts %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script type="text/javascript"
            src="{{ asset('bundles/adesignscalendar/js/fullcalendar/jquery.fullcalendar.min.js') }}"></script>
            <script type="text/javascript"
            src="{{ asset('bundles/adesignscalendar/js/calendar-settings.js') }}"></script>
            {% endjavascripts %}
            {% javascripts 'appJs/*' %}
            <script type="text/javascript" src="{{ asset( asset_url ) }}"></script>
            {% endjavascripts %}
        {% endblock %}

    </body>

</html>